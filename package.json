{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment Pluralsight course by Cory House",
  "scripts": {
    "prestart": "node common/message.js",
    "start": "npm-run-all --parallel security-check open:src lint:watch test:watch start-mockapi",
    "open:src": "node server.js",
    "security-check": "nsp check",
    "localtunnel": "lt --port 3000",
    "share": "npm-run-all --parallel open:src localtunnel",
    "lint": "esw  webpack.config.* server.js lib --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress common/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "generation-mocha-data": "babel-node common/generationMockData",
    "prestart-mockapi": "npm run generation-mocha-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 3001"
  },
  "author": "Renato Vicente",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-core": "6.17.0",
    "babel-loader": "6.2.5",
    "babel-preset-latest": "6.16.0",
    "babel-register": "6.16.3",
    "chai": "^4.1.2",
    "chalk": "^1.1.3",
    "css-loader": "0.25.0",
    "eslint": "3.8.1",
    "eslint-plugin-import": "2.0.1",
    "eslint-plugin-react": "^7.10.0",
    "eslint-watch": "2.1.14",
    "express": "4.14.0",
    "extract-text-webpack-plugin": "1.0.1",
    "html-webpack-plugin": "2.22.0",
    "jsdom": "9.8.0",
    "json-schema-faker": "^0.3.6",
    "json-server": "^0.14.0",
    "mocha": "3.1.2",
    "nock": "8.1.0",
    "npm-run-all": "^4.1.3",
    "nsp": "^3.2.1",
    "numeral": "1.5.3",
    "open": "0.0.5",
    "webpack": "1.13.2",
    "webpack-dev-middleware": "1.8.4",
    "webpack-hot-middleware": "2.13.0",
    "webpack-md5-hash": "0.0.5"
  },
  "dependencies": {
    "whatwg-fetch": "^2.0.4"
  }
}
